<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="gridPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.ModelsController">
   <children>
       <MenuBar fx:id="menuBar" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
           <Menu fx:id="menuModels" text="Модели">
               <MenuItem fx:id="greenbergItem" onAction="#buildGreenbergModels" text="Модели Гринберга" />
           </Menu>
           <Menu fx:id="menuTheory" text="Теория">
               <MenuItem fx:id="greenbergTheory" onAction="#swithcToGreenbergModelsTheory" text="Модели Гринберга" />
           </Menu>
           <Menu fx:id="menuExamples" text="Примеры">
               <MenuItem onAction="#switchToExamples" text="Пример 1" />
           </Menu>
           <Menu fx:id="menuLanguage" text="Язык">
               <MenuItem fx:id="rusLangItem" onAction="#changeToRus" text="Русский" />
               <MenuItem fx:id="enLangItem" onAction="#changeToEng" text="Английский" />
           </Menu>
       </MenuBar>
      <LineChart id="lwr_model_chart" fx:id="lwr_model_chart" stylesheets="@../chart-line-symbol.css" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.rowSpan="2">
        <xAxis>
          <NumberAxis side="BOTTOM" fx:id="xAxis" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAxis" side="LEFT" />
        </yAxis>
         <effect>
            <Blend />
         </effect>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </LineChart>
   </children>
</VBox>
